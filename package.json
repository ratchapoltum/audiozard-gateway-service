{
  "name": "audiozard-gateway-service",
  "version": "1.0.0",
  "description": "Audiozard Gateway Service is a gateway service for Audiozard Application",
  "author": {
    "name": "Ratchapol Thongta",
    "email": "ratchapol.tumrp@gmail.com"
  },
  "homepage": "https://bitbucket.org/shopping-application/audiozard-gateway-service",
  "repository": {
    "type": "git",
    "url": "https://ratchapoltumrp@bitbucket.org/shopping-application/audiozard-gateway-service.git"
  },
  "engines": {
    "node": ">=18.15.0",
    "npm": ">=9.5.0"
  },
  "private": true,
  "scripts": {
    "install:husky": "husky install",
    "precommit": "lint-staged && npm run lint",
    "prepush": "npm run lint && npm run test:unit",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "npm run test:unit && npm run test:e2e",
    "test:coverage": "npm run test:unit-coverage && npm run test:e2e-coverage",
    "test:unit": "jest",
    "test:unit-watch": "jest --watch",
    "test:unit-coverage": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.config.ts",
    "test:e2e-watch": "jest --config ./test/jest-e2e.config.ts --watch",
    "test:e2e-coverage": "jest --config ./test/jest-e2e.config.ts --coverage",
    "lint": "npm run format:check && npm run lint:check",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,test}/**/*.ts\" --max-warnings=0",
    "format:write": "prettier ./**/*.{ts,json,yml,*rc} --write",
    "format:check": "prettier ./**/*.{ts,json,yml,*rc} --check"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.3",
    "@commitlint/config-conventional": "17.6.3",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.5.0",
    "@types/node": "18.15.11",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lint-staged": "13.2.2",
    "prettier": "^2.3.2",
    "rimraf": "5.0.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^4.7.4"
  }
}
